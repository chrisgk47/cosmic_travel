<h1> Create a New Mission </h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @mission do |f| %>
    <%= f.label :name%>
    <%= f.text_field :name%>
    <br>
    <%= f.label :scientist %>
    <br>
    <%= f.text_field :scientist%>
    <br>
    <%= f.label :planet %>
    <br>
    <%= f.text_field :planet %>
    <br>
    <%= f.submit %>
  <% end %>
<h1> Create a New Scientist </h1>

<% if flash[:errors] %>
  <% flash[:errors].each do |error| %>
    <p style="color: red;"><%= error %></p>
  <% end %>
<% end %>

<%= form_for @scientist do |f| %>
    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br>
    <%= f.label :field_of_study %>
    <br>
    <%= f.text_field :field_of_study %>
    <br>
    <%= f.submit %>
  <% end %>